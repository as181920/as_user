<% content_for :nav do %>
  <%= link_to 'Cancel', @user %>
<% end %>

<div class="form-box">
  <%= form_for(@user) do |f| %>
    <table class="form-table">
      <tr> <td> Name: </td> <td> <%=f.text_field :name, {readonly: "true"}%> </td> </tr>
      <tr> <td> Email: </td> <td> <%=f.text_field :email, {readonly: "true"}%> </td> </tr>
      <tr> <td> <%= f.label :password %>: </td> <td> <%= f.password_field :password %> </td> </tr>
      <tr> <td> <%= f.label :password_confirmation %>: </td> <td> <%= f.password_field :password_confirmation %> </td> </tr>
      <tr> <td colspan="2"> <%= f.submit "Update Password"%> </td> </tr>
    </table>
  <% end %>
</div>
