<%= content_for :nav do %>
  <%= link_to 'Cancel', @user %>
<% end %>

<div class="form-box">
  <%= form_for(@user) do |f| %>
    <table class="form-table">
      <tr> <td> <%= f.label :email %>: </td> <td> <%= f.text_field :email %> </td> </tr>
      <tr> <td> <%= f.label :name %>: </td> <td> <%= f.text_field :name %> </td> </tr>
      <tr> <td colspan="2"> <%= f.submit %> </td> </tr>
    </table>
  <% end %>
</div>

